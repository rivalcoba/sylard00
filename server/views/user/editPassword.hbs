<main>
  <div class="container-fluid" id="contenedor_editar_contrasena">
    <div class="extension_fondo_blanco_izquierdo d-sm-none d-md-block"></div>
    <div class="container">
      <div class="row contenedor-90vh" id="fila1_editar_contrasena">
        <div class="col-md-7" id="columna_izquierda_editar_contrasena">
          <div class="" id="columna_izquierda_editar_contrasena_anidada">
            <h1 class="">
              <span
                class="icono_principal_mensaje icon-key1"
                id="icono_principal_editar_contrasena"
              ></span>
            </h1>
            <h1>
              {{translation.EDITPASSWORD.EDITPASSWORD}}
            </h1>
            <h3>
             {{translation.EDITPASSWORD.FILE_EDIT}}
            </h3>
            <form
              action="?_method=PUT"
              method="POST"
              role="form"
              class="formulario_contenedor_editar_contrasena"
            >
              <div class="contenedor_inputs_editar_contrasena">
                <label class="label" for="input_editar_contrasena">
                  <span class="icon-lock"></span>
                  {{translation.SYLARDLOGIN.PASSWORD}}
                </label>
                <input
                  id="password"
                  type="password"
                  name="password"
                  placeholder="{{translation.SYLARDREGISTER.PASSWORD_PLACEHOLDER}}"
                  class="input_editar_contrasena"
                  minlength="6"
                  required
                />
                <div class="contenedor_icono_correcto_input">
                  <p>
                    <span class="icono_correcto_input icon-check_circle"></span>
                  </p>
                </div>
                <div class="contenedor_icono_error_input">
                  <p>
                    <span class="icono_error_input icon-error"></span>
                  </p>
                </div>
              </div>
              <div class="contenedor_inputs_editar_contrasena">
                <label class="label" for="confirmar_editar_contrasena">
                  <span class="icon-lock"></span>
                  {{translation.SYLARDREGISTER.CONFIRM_PASSWORD}}
                </label>
                <input
                  class="input_editar_contrasena"
                  id="confirmationPassword"
                  name="confirmationPassword"
                  placeholder="{{translation.SYLARDREGISTER.CONFIRM_PASSWORD_PLACEHOLDER_}}"
                  type="password"
                  minlength="6"
                  required
                />
                <div class="contenedor_icono_correcto_input">
                  <p>
                    <span class="icono_correcto_input icon-check_circle"></span>
                  </p>
                </div>
                <div class="contenedor_icono_error_input">
                  <p>
                    <span class="icono_error_input icon-error"></span>
                  </p>
                </div>
              </div>
              <div class="contenedor_botones_editar_contrasena">
                <button type="submit" class="btn btn-primario">
                    {{translation.SYLARDCOLLECTIONS.SAVE}}
                </button>
                <!--<button type="reset" class="btn btn-secundario float_right">Restablecer</button>-->
              </div>
            </form>
          </div>
        </div>
        <div class="" id="columna_derecha_editar_contrasena_anidada">
          <img
            class=""
            src="/images/venadoMixteco-01.svg"
            id="venado_img_editar_contrasena"
            alt="Imagen de Venado Mixteco bordado"
          />
        </div>
      </div>
    </div>
  </div>
</main>