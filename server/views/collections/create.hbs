<h2 class="center pink-text">Añadir Colección</h2>
<p>Llena los campos correctamente</p>
<form class="col s12" action="/collections/add" method="post">
  <!-- Collection Name -->
  <div class="row">
    <div class="input-field col s12 m10 l8">
      <i class="fa fa-archive prefix" style="color: rgba(48, 115, 238, 0.924);" aria-hidden="true"></i>
      <label for="name">Nombre de la colección</label>
      <input id="name" type="text" name="name" {{!-- value="{{name}}" --}} /*required* />
    </div>
  </div>

  <!-- Collection Description-->
  <div class="row">
    <div class="input-field col s12 m10 l8">
      <i class="fa fa-archive prefix" style="color: rgba(48, 115, 238, 0.924);"></i>
      <label for="description">Descripción</label>
      <textarea type="text" name="description" id="description" class="materialize-textarea"
        {{!-- style="resize: none;height: 80px;" --}} ></textarea>
    </div>
  </div>

  <div class="row">
    <span style="font-weight: 700;">
      Lenguas de la coleccion
    </span>
  </div>
  <!-- Collections Languages -->
  <div class="row">
    <div class="input-field col s12 m10 l4">
      <i class="fa fa-language prefix" style="color: rgba(48, 115, 238, 0.924);" aria-hidden="true"></i>
      <label for="language">Lengua Terminal</label>
      <input 
        placeholder="Orizaba Nahuatl | oriz1235" 
        id="language" 
        type="text"
        onfocus="pageScripts.disableLanguageGroupBox()"
        onblur="pageScripts.enableLangGroup()"
        value="{{language}}" 
        list="langlist"
        /*required*/ >
      <datalist id="langlist">
        {{#each languages}}
          <option 
          id = '{{_id}}'
          data-id = '{{_id}}'
          data-name = "{{name}}"
          value = "{{name}} | {{gid}}">
        {{/each}}
      </datalist>
    </div>
    <!-- Language Group -->
    <div class="input-field col s12 m10 l4">
      <label for="langGroup">Grupo de Lengua</label>
      <input 
        disabled 
        placeholder="Aztec | azte1234" 
        id="langGroup" 
        name="langGroup"
        list="groupLanglist"
        type="text"
        onfocus="pageScripts.enableAddButton()"
        value="{{langGroup}}"
        /*required*/
      >
      <datalist id="groupLanglist">
      </datalist>
      <i 
        class="fa fa-plus-square prefix" 
        id="addLangBtn"
        style="color: rgba(48, 238, 143, 0.911); cursor: pointer; display:none;"
        onclick="pageScripts.addLanguage()"></i>
    </div>
  </div>

  <!-- Tabla de Resultados -->
  <div class="row">
    <div class="col s12 m10 l8">
      <table>
        <thead>
         <span 
         style="font-weight: 700; color:darksalmon">
           Lenguas agregadas a la colección
         </span>
         <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>ID Grupo de Lengua</th>
            <th>Nombre Grupo de Lengua</th>
            <th>Accion</th>
          </tr>
        </thead>
        <tbody id="langTable">          
        </tbody>
      </table>
    </div>
  </div>

  <!-- Comunidades -->
  <div class="row">
    <span style="font-weight: 700;">
      Comunidades de la colección
    </span>
  </div>
  <!-- ENTIDAD -->
  <div class="row">
    <div class="input-field col s12 m10 l4">
      <i 
        class="fa fa-compass prefix" 
        style="color: rgba(48, 115, 238, 0.924);"
        aria-hidden="true"></i>
      <label for="entity">Entidad:</label>
      <input 
        onblur="pageScripts.fillMunicipalitiesDataList()"
        onfocus="pageScripts.disableMunicipality();pageScripts.disableLocality()"
        {{!-- onchange="pageScripts.fillMunicipalitiesDataList()"  --}}
        list="entities" type="text" 
        id="entity">
      <datalist id="entities">
        {{#each entities}}
          <option 
            data-id = '{{_id}}'
            value="{{this}}">
        {{/each}}
      </datalist>
    </div>
  </div>
  <!-- Municipio -->
  <div class="row">
    <div class="input-field col s12 m10 l4">
      <i 
      class="fa fa-compass prefix" 
      style="color: rgba(48, 115, 238, 0.924);"
      aria-hidden="true"></i>
      <label for="municipality">Municipio:</label>
      <input 
        disabled 
        onblur="pageScripts.fillLocalitiesDataList()" 
        onfocus="pageScripts.disableLocality()"
        {{!-- onchange="pageScripts.fillLocalitiesDataList()"  --}}
        type="text" list="municipalities" id="municipality">
      <datalist id="municipalities">
      </datalist>
    </div>
  </div>
  <!-- Localidad -->
  <div class="row">
    <div class="input-field col s10 m10 l4">
      <i 
      class="fa fa-compass prefix" 
      style="color: rgba(48, 115, 238, 0.924);"
      aria-hidden="true"></i>
      <label for="locality">Localidad:</label>
      <input 
      disabled 
      type="text" 
      id="locality" 
      list="localities">
      
      <datalist id="localities">
      </datalist>
    </div>
    <div class="col s2 m2 l2">
      <i 
        class="fa fa-plus-square fa-2x" 
        id="addLocBtn"
        style="color: rgba(48, 238, 143, 0.911); cursor: pointer; display:none;"
        onclick="pageScripts.addLocality()"></i>
    </div>
  </div>

  <!-- Tabla de Resultados Locality -->
  <div class="row">
    <div class="col s12 m10 l8">
      <table>
        <thead>
          <span style="font-weight: 700; color:darksalmon">
            Comunidades agregadas a la colección
          </span>
          <tr>
            <th>Comunidad</th>
            <th>Municipio</th>
            <th>Entidad</th>
            <th>País</th>
            <th>Latitud</th>
            <th>Longitud</th>
            <th>Accion</th>
          </tr>
        </thead>
        <tbody id="locTable">          
        </tbody>
      </table>
    </div>
  </div>

  <!-- License-->
  <div class="row">
    <div class="input-field col s12 m10 l4">
      <i class="fa fa-creative-commons prefix" style="color: rgba(48, 115, 238, 0.924);" aria-hidden="true"></i>
      <label for="license">Licencia del Contenido</label>
      <input type="text" 
      placeholder="CC-BY-NC-SA" 
      name="license" 
      id="license"
      list="licenseType"
        {{!-- value="{{license}}" --}}>
      <datalist id="licenseType">
        <option value="CC-BY-NC-SA">
        <option value="CC BY-SA">
      </datalist>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m10 l8">
      <button 
      type="submit" 
      class="btn waves-effect waves-light">
        Submit
        <i class="fa fa-paper-plane right"></i>
      </button>
    </div>
  </div>
</form>