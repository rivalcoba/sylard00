        ACCESAR
        <span class="icono icon-login"></span>
      </a>
    </div>
    <div class="barra_superior_elemento float_right">
      <a href="/auth/register">
        REGISTRO
        <span class="icono icon-person"></span>
      </a>-->
        <!-- SI ES UN SUARIO -->
        {{#if user}}
          {{#hideIfSu user}}
              <a href="/dashboard">
                <i class="fa fa-table"></i> {{translation.COLLECTIONS}}
              </a>
          {{/hideIfSu}}
          {{#ifColaborator user}}
              <a href="/collections">
                <i class="fa fa-book"></i> {{translation.MY_COLLECTIONS}}
              </a>
          {{/ifColaborator}}
          {{#ifSu user}}
              <a href="/collections">
                <i class="fa fa-book"></i> {{translation.MY_COLLECTIONS}}
              </a>
          {{/ifSu}}
            <a class="dropdown-trigger" href="#!" data-target="settings_dropdown">
              <div style="padding-left: 50px; padding-right: 50px;" class="chip">
                <img src="{{user.image}}" alt="Contact Person">
                {{user.name}}
              </div>
              {{!-- {{translation.SETTINGS}}
              <i class="fa fa-cog"></i> --}}
            </a>
        {{else}}
          <a href="/auth/login">
               <span class="icono icon-login"></span> {{translation.LOGIN}}</a>
                </div>
          <div class="barra_superior_elemento float_right">
          {{#unless onRegisterPage}}
              <a href="/auth/register">
                 <span class="icono icon-person"></span> {{translation.REGISTER}}
              </a>
          {{/unless}}  
        {{/if}}
    </div>
  </nav>
  <!--TERMINA barra de navegacion superior-->
</div>