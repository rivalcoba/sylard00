        {{#if es}}
              <a href="" onclick="myI18n.setLang('en')">
                <i class="fa fa-globe" aria-hidden="true"></i> ENGLISH
              </a>
          {{else}}
              <a href="" onclick="myI18n.setLang('es')">
                <i class="fa fa-globe" aria-hidden="true"></i> ESPAÑOL
              </a>
          {{/if}}
      <label class="texto" for="checkbox">
        ESP
      </label>
      <label class="switch">
        <input type="checkbox" />
        <span class="slider round"></span>
      </label>
      <label class="texto" for="checkbox">
        ENG
      </label>
    </div>

    <div class="barra_superior_elemento float_left active">
      <a href="/">
        <span class="icono icon-home1"></span>
        SYLARD
      </a>
    </div>
