

<h2 class="center pink-text">{{translation.LOGIN}}</h2>
<div class="row" style="padding-top:0px">
  <div class="col s3"></div>
  <form class="col s6 z-depth-3" style="padding: 20px; border-style: none; border-color: indigo;" action="/auth/login/user" method="post">
    
    <div class="row">
      <div class="col s2"></div>
      <div class="input-field col s8 center">
        <i class="fa fa-envelope prefix" style="color: grey;" aria-hidden="true"></i>
        <label for="email">{{translation.EMAIL}}</label>
        <input id="email" placeholder="Ingresa tu correo electrÃ³nico" type="email" class="validate" name="email"
          required>
      </div>
      <div class="col s2"></div>
    </div>

    <div class="row">
      <div class="col s2"></div>
      <div class="input-field col s8 center">
